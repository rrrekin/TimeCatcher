{
  "name": "timecatcher",
  "version": "0.20.1",
  "description": "Task &amp; time tracking desktop app",
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "concurrently -k -s first -n \"vite,electron\" \"npm:dev:vite\" \"wait-on http://localhost:5173 && npm run dev:electron\"",
    "dev:vite": "vite --strictPort --port 5173",
    "dev:electron": "tsc --project tsconfig.main.json && electron .",
    "build": "vue-tsc --noEmit && vite build && tsc --project tsconfig.main.json",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "build:linux": "npm run build && electron-builder --linux",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:coverage:check": "npm run test:coverage && node scripts/check-coverage.js",
    "lint:md": "markdownlint-cli2",
    "format:md": "markdownlint-cli2 --fix",
    "format": "prettier --write \"{src,scripts,.github}/**/*.{ts,js,vue,json,html,css,scss,yaml,yml}\"",
    "format:check": "prettier --check \"{src,scripts,.github}/**/*.{ts,js,vue,json,html,css,scss,yaml,yml}\"",
    "install-hooks": "cp scripts/git-hooks/* .git/hooks/ && chmod +x .git/hooks/*",
    "version:major": "node scripts/bump-version.js major",
    "version:minor": "node scripts/bump-version.js minor",
    "version:patch": "node scripts/bump-version.js patch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rrrekin/TimeCatcher.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/rrrekin/TimeCatcher/issues"
  },
  "homepage": "https://github.com/rrrekin/TimeCatcher#readme",
  "devDependencies": {
    "@electron/rebuild": "^4.0.1",
    "@types/better-sqlite3": "^7.6.13",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.8.0",
    "concurrently": "^9.2.0",
    "electron": "^37.3.0",
    "electron-builder": "^26.0.12",
    "jsdom": "^26.1.0",
    "markdownlint-cli2": "^0.18.1",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "vite": "^7.1.2",
    "vitest": "^3.2.4",
    "vue-tsc": "^3.0.5",
    "wait-on": "^8.0.4"
  },
  "dependencies": {
    "better-sqlite3": "^12.2.0",
    "electron-store": "^10.1.0",
    "vue": "^3.5.18"
  },
  "build": {
    "appId": "eu.rrrekin.timecatcher",
    "productName": "TimeCatcher",
    "directories": {
      "output": "dist/packages"
    },
    "files": [
      "dist/main/**/*",
      "dist/renderer/**/*"
    ],
    "extraResources": [],
    "mac": {
      "icon": "assets/icon.icns",
      "category": "public.app-category.productivity"
    },
    "win": {
      "icon": "assets/icon.ico"
    },
    "linux": {
      "icon": "assets/icon.png",
      "category": "Office"
    }
  }
}
